{
  "name": "Sample Batch Configuration",
  "description": "Sample batch configuration with multiple views and formats",
  "outputDir": "batch_output",
  "parallel": false,
  "maxWorkers": 4,
  "configs": [
    {
      "name": "monthly-calendar",
      "configFile": "configs/planner_config.yaml",
      "viewConfigs": [
        {
          "type": "monthly",
          "title": "Monthly Calendar",
          "description": "Traditional monthly calendar view with task bars",
          "templateName": "monthly_page.tpl",
          "pageSize": "letter",
          "orientation": "portrait",
          "showWeekNumbers": true,
          "showTaskBars": true,
          "showTaskDetails": true,
          "showLayoutStats": false,
          "showCategoryLegend": true,
          "maxTasksPerDay": 5,
          "taskBarHeight": 12.0,
          "taskBarSpacing": 1.0,
          "compactMode": false,
          "colorScheme": "default",
          "fontSize": "normal",
          "layoutDensity": "normal"
        },
        {
          "type": "weekly",
          "title": "Weekly Calendar",
          "description": "Detailed weekly view with enhanced task visualization",
          "templateName": "weekly_page.tpl",
          "pageSize": "letter",
          "orientation": "landscape",
          "showWeekNumbers": true,
          "showTaskBars": true,
          "showTaskDetails": true,
          "showLayoutStats": true,
          "showCategoryLegend": true,
          "maxTasksPerDay": 10,
          "taskBarHeight": 15.0,
          "taskBarSpacing": 1.5,
          "compactMode": false,
          "colorScheme": "default",
          "fontSize": "normal",
          "layoutDensity": "normal"
        }
      ],
      "formats": ["pdf", "latex"],
      "options": {
        "includeStats": true,
        "includeLegend": true,
        "batchMode": true,
        "parallelJobs": 2
      }
    },
    {
      "name": "yearly-overview",
      "configFile": "configs/planner_config.yaml",
      "viewConfigs": [
        {
          "type": "yearly",
          "title": "Yearly Overview",
          "description": "High-level yearly calendar overview",
          "templateName": "yearly_page.tpl",
          "pageSize": "a3",
          "orientation": "landscape",
          "showWeekNumbers": false,
          "showTaskBars": true,
          "showTaskDetails": false,
          "showLayoutStats": false,
          "showCategoryLegend": true,
          "maxTasksPerDay": 3,
          "taskBarHeight": 8.0,
          "taskBarSpacing": 0.5,
          "compactMode": true,
          "colorScheme": "minimal",
          "fontSize": "small",
          "layoutDensity": "compact"
        }
      ],
      "formats": ["pdf", "html"],
      "options": {
        "includeStats": false,
        "includeLegend": true,
        "batchMode": true,
        "parallelJobs": 2
      }
    }
  ]
}
