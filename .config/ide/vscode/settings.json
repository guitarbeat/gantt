{
  "// VSCode Settings for PhD Dissertation Planner": "Go + LaTeX + Markdown project",

  // Editor settings
  "editor.tabSize": 4,
  "editor.insertSpaces": true,
  "editor.detectIndentation": false,
  "editor.rulers": [80, 120],
  "editor.wordWrap": "bounded",
  "editor.wordWrapColumn": 80,
  "editor.formatOnSave": true,
  "editor.formatOnPaste": true,
  "editor.trimAutoWhitespace": true,
  "editor.insertFinalNewline": true,
  "editor.trimFinalNewlines": true,

  // File associations
  "files.associations": {
    "*.tpl": "latex",
    "*.yaml": "yaml",
    "*.yml": "yaml"
  },

  // Go settings
  "go.toolsManagement.checkForUpdates": "local",
  "go.useLanguageServer": true,
  "go.formatTool": "goimports",
  "go.lintTool": "golangci-lint",
  "go.lintFlags": ["--fast"],
  "go.testFlags": ["-v"],
  "go.buildTags": "",
  "go.testTimeout": "30s",
  "go.coverOnSave": false,
  "go.coverOnTestPackage": true,
  "go.coverOnSingleTest": true,
  "go.coverOnSingleTestFile": true,

  // LaTeX settings
  "latex-workshop.latex.autoBuild.run": "onSave",
  "latex-workshop.latex.autoClean.run": "onBuilt",
  "latex-workshop.latex.clean.fileTypes": [
    "*.aux",
    "*.bbl",
    "*.blg",
    "*.idx",
    "*.ind",
    "*.lof",
    "*.lot",
    "*.out",
    "*.toc",
    "*.acn",
    "*.acr",
    "*.alg",
    "*.glg",
    "*.glo",
    "*.gls",
    "*.ist",
    "*.fls",
    "*.log",
    "*.fdb_latexmk",
    "*.synctex.gz",
    "*.nav",
    "*.snm",
    "*.vrb"
  ],
  "latex-workshop.latex.recipes": [
    {
      "name": "xelatex",
      "tools": ["xelatex"]
    },
    {
      "name": "xelatex -> bibtex -> xelatex*2",
      "tools": ["xelatex", "bibtex", "xelatex", "xelatex"]
    }
  ],
  "latex-workshop.latex.tools": [
    {
      "name": "xelatex",
      "command": "xelatex",
      "args": [
        "-synctex=1",
        "-interaction=nonstopmode",
        "-file-line-error",
        "%DOC%"
      ]
    },
    {
      "name": "bibtex",
      "command": "bibtex",
      "args": ["%DOCFILE%"]
    }
  ],

  // Markdown settings
  "markdown.preview.breaks": true,
  "markdown.preview.linkify": true,
  "markdown.preview.typographer": true,

  // File explorer
  "explorer.fileNesting.enabled": true,
  "explorer.fileNesting.patterns": {
    "*.go": "${capture}.go_test,${capture}_test.go",
    "*.tex": "${capture}.aux,${capture}.log,${capture}.out,${capture}.toc,${capture}.pdf",
    "*.yaml": "${capture}.yaml,${capture}.yml",
    "*.md": "${capture}.md,${capture}.markdown"
  },

  // Search settings
  "search.exclude": {
    "**/vendor/**": true,
    "**/generated/**": true,
    "**/.temp/**": true,
    "**/.build_artifacts/**": true,
    "**/releases/**": true,
    "**/*.aux": true,
    "**/*.log": true,
    "**/*.out": true,
    "**/*.pdf": true
  },

  // Files to watch
  "files.watcherExclude": {
    "**/vendor/**": true,
    "**/generated/**": true,
    "**/.temp/**": true,
    "**/.build_artifacts/**": true,
    "**/releases/**": true
  },

  // Terminal settings
  "terminal.integrated.defaultProfile.osx": "zsh",
  "terminal.integrated.cwd": "${workspaceFolder}",

  // Extensions recommendations
  "extensions.recommendations": [
    "golang.go",
    "james-yu.latex-workshop",
    "yzhang.markdown-all-in-one",
    "ms-vscode.vscode-yaml",
    "redhat.vscode-yaml",
    "ms-vscode.powershell",
    "ms-vscode.makefile-tools"
  ]
}
