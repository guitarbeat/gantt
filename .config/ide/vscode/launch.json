      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal"
    },
    {
      "name": "Launch Planner (Silent)",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "program": "${workspaceFolder}/cmd/planner",
      "args": [],
      "env": {
        "PLANNER_CSV_FILE": "input_data/research_timeline_v5.1_comprehensive.csv",
        "PLANNER_SILENT": "1"
      },
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal"
    },
    {
      "name": "Launch Planner (Validate)",
      "type": "go",
      "request": "launch",
      "mode": "auto",
